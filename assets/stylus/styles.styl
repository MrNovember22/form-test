@import "/assets/stylus/variables"



/*
 * Main styles
 */
body {
  font-family 'Roboto', sans-serif
  margin 0
  background-color $grey3
}



/*
 * Auth block
 */
.auth-block {
  padding 20px 0
  border-top 2px solid $red
  width 65%
  margin 15% auto
  background-color $white

  .auth-heading {
    position relative
    color $dark
    font-size 30px
    text-align center
    padding 20px
    font-weight 600

    .close {
      position absolute
      background-color transparent
      border 0
      -webkit-appearance none
      cursor pointer
      top -15px
      right 15px
      font-size 32px
      color $grey
      padding 0
    }
  }

  .auth-body {
    background-color $grey1
    padding 40px
    display flex
    flex-direction row

    .social {
      width calc(100% - 100px)
      padding 0 20px

      .social-buttons {
        margin-left: auto;
        margin-right: auto;
      }
    }

    .login-form {
      width calc(100% - 100px)
      padding 0 20px

      .form {
        margin-left: auto;
        margin-right: auto;

        .form-group {
          margin-bottom 15px

          &:last-of-type {
            margin-bottom 0
          }

          label {
            display inline-block
            margin-bottom 5px
            font-weight 600
            font-size 16px
          }

          input {
            display block
            width: 100%
          }

          a {
            &.help {
              margin-top: 10px;
              float: right;
              color $dark
              text-decoration underline
              font-weight 600

              &:hover {
                text-shadow: 0 -1px 1px rgba(0,0,0,0.15)
              }
            }
          }
        }

        .form-check {
          margin-bottom 15px

          label {
            font-weight: 600;
            font-size: 14px;
          }

          &-input {
            background-color $blue
            -webkit-appearance none
            border-color $blue
            background-repeat: no-repeat;
            background-position: center center;
            background-size: 70% 70%;
            height: 15px;
            width: 15px;
            padding: 6px;
            margin: 5px 0 0 0;

            &:checked {
              background-image url("data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 8 8'><path fill='%23fff' d='M6.564.75l-3.59 3.612-1.538-1.55L0 4.26 2.974 7.25 8 2.193z'/></svg>")
            }
          }
        }
      }
    }

    .divider {
      border-right 1px solid $grey
      margin 0 20px
    }
  }

  .auth-footer {
    color $grey2
    font-size 24px
    text-align center
    padding 20px

    a {
      color $dark
      text-decoration underline
    }
  }

  @media (max-width 1199px) {
    width 75%
  }

  @media (max-width 768px) {
    width 65%

    .auth-body {
      flex-direction column-reverse
      align-items center

      .divider {
        border-right 0
        border-bottom  1px solid $grey
        margin 30px 0
        width calc(100% - 100px)
      }
    }
  }

  @media (max-width 575px) {
    .auth-body {
      .social,
      .login-form {
        width 100%
      }

      .divider {
        width 100%
      }
    }
  }

  @media (max-width 425px) {
    width 90%

    .auth-body {
      padding: 20px 15px;
    }
  }
}



/*
 * Buttons
 */
.btn {
  text-align center
  border-radius 3px
  border 1px solid $dark
  background-color $dark
  color $white
  text-shadow: -1px 0 rgba(0, 0, 0, 0.15), 0 1px rgba(0, 0, 0, 0.15), 1px 0 rgba(0, 0, 0, 0.15), 0 -1px rgba(0, 0, 0, 0.15);
  font-weight 600

  &:hover {
    cursor pointer
    border-color lighten($dark, 10%)
    background-color lighten($dark, 10%)
  }

  &:focus,
  &:active {
    outline none
  }



  // Button sizes
  &.btn-lg {
    font-size 16px
    padding 10px 26px
  }



  // Block buttons
  &.btn-block {
    width 100%
    display block
    margin-bottom 20px
    padding 10px 16px

    .svg-inline--fa {
      float left
      font-size 18px
      color $dark
    }
  }



  // Social buttons
  &.btn-facebook {
    background-color $facebook
    border-color $facebook
  }

  &.btn-google {
    background-color $google
    border-color $google
  }
}



/*
 * Inputs
 */
input {
  border 1px solid $white
  border-radius 3px
  box-sizing border-box

  &:focus,
  &:active {
    outline none
  }

  &.input-lg {
    font-size 20px
    padding 10px 16px
  }
}